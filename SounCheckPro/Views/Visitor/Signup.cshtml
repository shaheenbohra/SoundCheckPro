
@{
    ViewBag.Title = "Signup";
}
<div class="well" style="background-color:transparent;height:30px;"></div>

<div class="d-flex justify-content-center h-100">

    <div class="card">
        <div class="card-header">
            <h3>Sign Up</h3>

        </div>
        <div class="card-body">
            <form>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="username">

                </div>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="Email">

                </div>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="password">
                </div>
                <div class="form-group">
                    <select class="form-control" id="ddltype">
                        <option value="0">Select Member Type</option>
                        <option value="1">Talent</option>
                        <option value="2">Client</option>
                    </select>
                </div>
                <div class="row align-items-center remember">
                    <input type="checkbox">I accept the terms and conditions
                </div>
                <div class="form-group">
                    <input type="button" onclick="return Register();" value="Register" class="btn float-right login_btn">
                </div>
            </form>
        </div>

    </div>
</div>

<script type="text/javascript" src="~/JS/SignUp.js"></script>