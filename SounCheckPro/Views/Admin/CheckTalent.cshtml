
@{
    ViewBag.Title = "CheckTalent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Talent Request</h2>
    <form class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Single/Band:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txttype" placeholder="Type" name="txttype">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Band Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtname" placeholder="Name" name="txtname">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Genre:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtgenre" placeholder="Genre" name="txtgenre">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Vimeo Link:</label>
            <div class="col-sm-10">
                <a href="#"  role="button">www.vimeo.com/link1</a>
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Rating:</label>
            <div class="col-sm-10">
                <select id="ddlRating" class="form-control">
                    <option value="0">Select Rating</option>
                    <option value="1">Select</option>
                    <option value="2">Select</option>
                    <option value="3">Select</option>
                    <option value="4">Select</option>
                    <option value="5">Select</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Grade:</label>
            <div class="col-sm-10">
                <select id="ddlGrade" class="form-control">
                    <option value="0">Select Grade</option>
                    <option value="1">NoVoice</option>
                    <option value="2">Intermediate</option>
                    <option value="3">Proficient</option>

                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="radio">
                    <label><input type="radio" name="optradio" checked>Accept</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="optradio">Reject</label>
                </div>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Comments:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtcomment" placeholder="Comment" name="txtcomment">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="button" class="btn btn-primary" value="Submit" />

            </div>
        </div>
    </form>
</div>
